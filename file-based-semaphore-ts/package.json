  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuulbelt/tuulbelt.git",
    "directory": "file-based-semaphore-ts"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
