{
  "name": "@tuulbelt/file-based-semaphore-ts",
  "version": "0.1.0",
  "description": "Cross-platform file-based semaphore for process synchronization in Node.js",
  "main": "src/index.ts",
  "type": "module",
  "bin": {
    "semats": "./src/index.ts",
    "file-semaphore-ts": "./src/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "test": "node --import tsx --test test/index.test.ts test/integration.test.ts test/security.test.ts test/edge-cases.test.ts test/stress.test.ts",
    "test:unit": "node --import tsx --test test/index.test.ts",
    "test:integration": "node --import tsx --test test/integration.test.ts",
    "test:security": "node --import tsx --test test/security.test.ts",
    "test:edge": "node --import tsx --test test/edge-cases.test.ts",
    "test:stress": "node --import tsx --test test/stress.test.ts",
    "test:watch": "node --import tsx --test --watch test/index.test.ts"
  },
  "keywords": [
    "tuulbelt",
    "semaphore",
    "locking",
    "mutex",
    "process-synchronization",
    "concurrency",
    "file-lock"
