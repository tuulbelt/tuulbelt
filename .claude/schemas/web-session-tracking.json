{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Web Session Tracking Schema",
  "description": "Tracks branch-based sessions in Web environment",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0"
    },
    "environment": {
      "type": "string",
      "const": "web"
    },
    "sessions": {
      "type": "object",
      "patternProperties": {
        "^": {
          "type": "object",
          "properties": {
            "feature_branch": {
              "type": "string",
              "description": "Feature branch name"
            },
            "created_at": {
              "type": "string",
              "format": "date-time"
            },
            "updated_at": {
              "type": "string",
              "format": "date-time"
            },
            "status": {
              "type": "string",
              "enum": ["active", "merged", "abandoned"]
            },
            "meta_repo": {
              "type": "object",
              "properties": {
                "branch": {
                  "type": "string"
                },
                "has_changes": {
                  "type": "boolean"
                },
                "commits_count": {
                  "type": "integer",
                  "minimum": 0
                },
                "pr_url": {
                  "type": ["string", "null"]
                },
                "pr_number": {
                  "type": ["integer", "null"]
                },
                "pr_state": {
                  "type": ["string", "null"],
                  "enum": [null, "open", "closed", "merged"]
                },
                "pr_merged": {
                  "type": "boolean"
                }
              },
              "required": ["branch", "has_changes", "commits_count", "pr_merged"]
            },
            "submodules": {
              "type": "object",
              "patternProperties": {
                "^tools/": {
                  "type": "object",
                  "properties": {
                    "branch": {
                      "type": "string"
                    },
                    "has_changes": {
                      "type": "boolean"
                    },
                    "commits_count": {
                      "type": "integer",
                      "minimum": 0
                    },
                    "pr_url": {
                      "type": ["string", "null"]
                    },
                    "pr_number": {
                      "type": ["integer", "null"]
                    },
                    "pr_state": {
                      "type": ["string", "null"],
                      "enum": [null, "open", "closed", "merged"]
                    },
                    "pr_merged": {
                      "type": "boolean"
                    }
                  },
                  "required": ["branch", "has_changes", "commits_count", "pr_merged"]
                }
              }
            }
          },
          "required": ["feature_branch", "created_at", "updated_at", "status", "meta_repo", "submodules"]
        }
      }
    }
  },
  "required": ["version", "environment", "sessions"]
}
